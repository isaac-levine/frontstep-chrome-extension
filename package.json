{
  "name": "frontstep",
  "displayName": "Frontstep",
  "version": "0.0.1",
  "description": "A basic Plasmo extension.",
  "author": "Isaac",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@clerk/chrome-extension": "^2.2.28",
    "@clerk/clerk-react": "^5.27.0",
    "@plasmohq/messaging": "^0.7.1",
    "lucide-react": "^0.487.0",
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "prettier": "3.2.4",
    "tailwindcss": "3",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "identity",
      "storage",
      "cookies",
      "tabs",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://*.clerk.com/*",
      "https://mail.google.com/*",
      "http://localhost/*",
      "$CLERK_FRONTEND_API/*",
      "https://*.gmail.com/*",
      "https://*.google.com/*"
    ]
  }
}
